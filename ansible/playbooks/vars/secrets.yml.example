# This file contains all sensitive information that must be encrypted
# with Ansible Vault before committing to version control.
#
# Usage:
#   1. Copy this file to vars/secrets.yml
#   2. Fill in your actual values
#   3. Encrypt with: ansible-vault encrypt ansible/playbooks/vars/secrets.yml
#
# To edit later: ansible-vault edit ansible/playbooks/vars/secrets.yml
# ============================================

# --- Ansible Connection ---
# sudo password for become operations
ansible_become_password: "YOUR_SUDO_PASSWORD"

# --- Cloud Providers ---
# Hetzner Cloud API token (if using Hetzner)
hetzner_cloud_token: "YOUR_HETZNER_API_TOKEN"

# --- Tailscale ---
# Auth keys for automated Tailscale setup
# Generate at: https://login.tailscale.com/admin/settings/keys
tailscale_auth_keys:
  server1: "tskey-auth-XXXXXX"
  server2: "tskey-auth-YYYYYY"

# --- Healthchecks ---
# Webhook URLs for healthcheck monitoring (e.g., healthchecks.io, hc-ping.com)
healthcheck_urls:
  seoul_server: "https://hc-ping.com/YOUR_UUID_1"
  bucheon_server: "https://hc-ping.com/YOUR_UUID_2"

# --- Ethereum Addresses ---
# Fee recipient addresses for validator rewards
fee_recipient_addresses:
  mainnet: "0xYOUR_MAINNET_FEE_RECIPIENT"
  testnet: "0xYOUR_TESTNET_FEE_RECIPIENT"

# --- Validator Graffiti ---
# Graffiti string included in proposed blocks (can reveal identity)
validator_graffiti: "Your Graffiti Here"

# --- Beacon Node URLs ---
# Tailscale hostnames for beacon nodes (reveals network structure)
beacon_node_urls:
  mainnet:
    - "https://your-node1.your-tailnet.ts.net"
    - "https://your-node2.your-tailnet.ts.net"
  testnet:
    - "http://localhost:5152"

# --- Infrastructure ---
# CIDR for your local internal network (optional)
internal_network_cidr: "192.168.1.0/24"

# Path to your public SSH key for the admin user
admin_user_ssh_key_path: "~/.ssh/id_rsa.pub"
